<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lance.btcontroller.NetworkFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/network_text_tcp_setting"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/title_server_setting"
               android:textSize="18dp"/>

           <CheckBox
               android:id="@+id/network_checkbox"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/text_checkbox"
               android:layout_below="@+id/network_text_tcp_setting"
               android:layout_alignParentRight="true"/>

           <LinearLayout
               android:id="@+id/container_server_ip"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/network_checkbox">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/hint_ip"/>
               <EditText
                   android:id="@+id/network_edit_server_ip"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:paddingTop="20dp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/container_server_port"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/container_server_ip">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/hint_port"/>
               <EditText
                   android:id="@+id/network_edit_server_port"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:inputType="number" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/container_server_control"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_below="@id/container_server_port">

               <Button
                   android:id="@+id/network_button_get_data"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2dp"
                   android:text="@string/button_start_get_data"/>
           </LinearLayout>

           <View
               android:id="@+id/blank"
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:layout_below="@id/container_server_control"/>
           <View
               android:id="@+id/seperater"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#333"
               android:layout_below="@id/blank"/>

           <TextView
               android:id="@+id/network_text_local_setting"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/title_network_setting"
               android:textSize="18dp"
               android:layout_below="@id/seperater"
               android:paddingTop="20dp"/>
           <LinearLayout
               android:id="@+id/container_local_ip"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/network_text_local_setting">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/hint_local_ip"/>
               <EditText
                   android:id="@+id/network_edit_local_ip"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:paddingTop="20dp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/container_netmask"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/container_local_ip">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/hint_local_netmask"/>
               <EditText
                   android:id="@+id/network_edit_netmask"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:hint="@string/hint_local_netmask"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/container_local_gateway"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/container_netmask">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/hint_local_gateway"/>
               <EditText
                   android:id="@+id/network_edit_gateway"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:hint="@string/hint_local_gateway"/>
           </LinearLayout>


           <LinearLayout
               android:id="@+id/network_layout_button_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_below="@id/container_local_gateway"
               android:paddingTop="10dp">
               <Button
                   android:id="@+id/network_button_edit"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:padding="2dp"
                   android:text="@string/button_edit_tcp"/>

           </LinearLayout>

       </LinearLayout>
   </ScrollView>



</RelativeLayout>
